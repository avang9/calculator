<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimaryVariant"
        android:gravity="bottom|clip_horizontal"
        android:orientation="vertical"
        android:weightSum="9"
        xmlns:android="http://schemas.android.com/apk/res/android">
<!--        <TextView-->
<!--            android:gravity=""-->
<!--            android:textColor="?attr/colorOnPrimary"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/sans"-->
<!--            android:text="CALCULATOR"-->
<!--            android:textStyle="bold" />-->
    <HorizontalScrollView
            android:id="@+id/scrollHori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="none">

            <TextView
                android:id="@+id/txtExpression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textAlignment="viewEnd"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="56sp" />
        </HorizontalScrollView>


        <TextView
            android:id="@+id/txtJavab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:textSize="35sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/p_700" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5"
            android:background="?attr/colorPrimary"
            android:weightSum="5">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/btn_ac"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="AC"
                    android:textColor="@color/A_700"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnBaz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="("
                    android:textColor="@color/p_700"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnBasteh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text=")"
                    android:textColor="@color/p_700"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btn_taghsim"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:fontFamily="@font/sans"
                    android:text="/"
                    android:textColor="@color/p_700"
                    android:textSize="30sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="@string/_1"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="2"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="3"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_zarb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:fontFamily="@font/sans"
                    android:text="*"
                    android:textColor="@color/p_700"
                    android:textSize="44sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="4"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="5"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="6"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_sum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:fontFamily="@font/sans"
                    android:text="+"
                    android:textColor="@color/p_700"
                    android:textSize="34sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="7"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="8"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="9"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_tafrig"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:fontFamily="@font/sans"
                    android:text="-"
                    android:textColor="@color/p_700"
                    android:textSize="44sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/btnpakidn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:layoutDirection="rtl"
                    android:text=">"
                    android:textColor="@color/A_700"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="0"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btndat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:text="."
                    android:textSize="44sp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/btnMosavi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_circel"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="="
                        android:textColor="?attr/colorOnSecondary"
                        android:textSize="34sp" />

                </FrameLayout>


            </TableRow>

        </TableLayout>

</LinearLayout>
